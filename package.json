		"dist"
	],
	"devDependencies": {
		"@dcl/js-runtime": "latest",
		"@dcl/sdk": "latest",
		"eth-connect": "latest",
		"typescript": "^5.2.2"
	},
	"engines": {
		"node": ">=16.0.0",
		"npm": ">=8.0.0",
